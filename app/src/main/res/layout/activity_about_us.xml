<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/about_us_bg"
    tools:context=".Settings.AboutUs.AboutUs_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bacu_ui_btn" />

        <TextView
            android:id="@+id/txtView_aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="About Us"
            android:textColor="@color/third"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtview_Welcome"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:text="      Welcome to \n      HearAll"
        android:textColor="@color/third"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_NNP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:elevation="25dp"
        android:background="@drawable/round_back_white10_20"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline13">

            <ImageView
                android:id="@+id/img_minimalDesign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient2_bg"
                app:srcCompat="@drawable/cope_portrait_icon" />

            <TextView
                android:id="@+id/txtView_minimalDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img_minimalDesign"
                android:text="Minimal Design"
                android:textColor="#2A00A2"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtView_minimalDesign"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_minimalDesign"
                android:text="Visual and functional way to enhance your experience."
                android:textColor="@color/fifth"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <ImageView
                android:id="@+id/img_productivity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient2_bg"
                app:srcCompat="@drawable/productivity_icon" />

            <TextView
                android:id="@+id/txtView_productivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img_productivity"
                android:text="Productivity"
                android:textColor="#2A00A2"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_Productivity"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtView_productivity"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/fifth"
                android:layout_toRightOf="@+id/img_productivity"
                android:text="Multiple features implemented to increase your overall productivity."
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

            <ImageView
                android:id="@+id/img_personalAcc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient2_bg"
                app:srcCompat="@drawable/about_us_icon" />

            <TextView
                android:id="@+id/txtView_personalAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img_personalAcc"
                android:text="Personal Account"
                android:textColor="#ED2E7E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_personalAccount"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtView_personalAcc"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_personalAcc"
                android:text="Personalize your experience with the app to your preference."
                android:textColor="#FF00B8"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

            <ImageView
                android:id="@+id/img_cloud"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient2_bg"
                app:srcCompat="@drawable/cloud_icon" />

            <TextView
                android:id="@+id/txtView_secureDatabase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img_cloud"
                android:text="Secure Database"
                android:textColor="#ED2E7E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_SecureDatabase"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtView_secureDatabase"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_cloud"

                android:text="Rest easy knowing your personal information is stored securely."
                android:textColor="#FF00B8"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_getStarted"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient2_bg"
        android:layout_marginTop="40dp"
        android:text="Get Started"
        android:elevation="25dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="239dp" />

</LinearLayout>