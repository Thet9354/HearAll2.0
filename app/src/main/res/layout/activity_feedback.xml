<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_beautiful_bg"
    tools:context=".Settings.Feedback.Feedback_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bacu_ui_btn" />

        <TextView
            android:id="@+id/txtView_languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Feedback"
            android:textColor="#6600CC"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_send"
        android:src="@drawable/send_icon"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:background="@drawable/round_back_night_mode"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/txtView_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtView_ownEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtView_to"
                    android:text="thetpine254@gmail.com"
                    android:textColor="#F34B4BF6"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/From"
                    android:text="From: "
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editTxt_from"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/From"
                    android:background="@null"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject"
                    android:text="Subject: "
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editTxt_subject"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/subject"
                    android:background="@null"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightGray" />

            <EditText
                android:id="@+id/editTxt_message"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@null"
                android:gravity="top"
                android:layout_marginTop="20dp"
                android:hint="Type your message here..."
                android:inputType="text|textNoSuggestions|textMultiLine"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>