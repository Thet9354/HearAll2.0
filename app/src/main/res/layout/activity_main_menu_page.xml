<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuPage_Activity"
    android:backgroundTint="@color/black"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_profilePic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/profile_pic_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtView_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pinetree@2.0"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back!"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <!-- Speech To Text -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_speechToText"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#2D2D2D"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_speechToText"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/speech_to_text"/>

                            <TextView
                                android:id="@+id/txtView_speechToText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Speech To Text"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Sign Language -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_signLanguage"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#2D2D2D"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_signLanguage"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/sign_language"/>

                            <TextView
                                android:id="@+id/txtView_signLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign Language"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <!-- Call -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_call"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#2D2D2D"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_call"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/call"/>

                            <TextView
                                android:id="@+id/txtView_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Sound Meter -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_soundMeter"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#2D2D2D"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_soundMeter"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/noise_suppressor"/>

                            <TextView
                                android:id="@+id/txtView_soundMeter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sound Meter"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <!-- Volume amplification -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_volumeAmplification"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#2D2D2D"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_volumeAmplification"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/volume_amplifier"/>

                            <TextView
                                android:id="@+id/txtView_volumeAmplification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Volume Amplifier"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Volume amplification -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_setting"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#2D2D2D"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_setting"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/settings"/>

                            <TextView
                                android:id="@+id/txtView_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Setting"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>