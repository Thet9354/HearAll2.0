<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration.RegistrationPage_Activity"
    android:background="@color/black">

    <TextView
        android:id="@+id/txtView_HearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HearAll"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/editTxt_userName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_HearAll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/person_ic"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/editTxt_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/editTxt_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="7dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        android:layout_below="@+id/editTxt_email"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTxt_confirmPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="7dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        android:layout_below="@+id/editTxt_password"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:textColor="@color/white"
        android:background="@drawable/transparent_btn"
        android:layout_below="@+id/editTxt_confirmPassword"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="or sign in using"
        android:textColor="@color/white"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_toLeftOf="@+id/img_google"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView"
        app:srcCompat="@drawable/facebook_icon" />

    <ImageView
        android:id="@+id/img_google"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/google_icon" />

    <ImageView
        android:id="@+id/img_linkedin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/img_google"
        app:srcCompat="@drawable/linkedin_icon" />




</RelativeLayout>