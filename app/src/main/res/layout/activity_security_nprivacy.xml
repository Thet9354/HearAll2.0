<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_beautiful_bg"
    tools:context=".Settings.SecurityAndPrivacy.SecurityNPrivacy_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="20dp"
            android:src="@drawable/bacu_ui_btn" />

        <TextView
            android:id="@+id/txtView_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Security &amp; Privacy"
            android:textColor="#AD00FF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtView_Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txtView_privacy"
            android:elevation="20dp"
            android:text="Done"
            android:textColor="#FF3B3B"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="left"
                android:text="Manage what information you see and share on HearAll."
                android:textColor="@color/white" />

            <View
                android:id="@+id/divider"
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_white10_20"
                android:elevation="25dp"
                android:orientation="vertical"
                android:padding="15dp">

                <!--Ads preferences-->
                <RelativeLayout
                    android:id="@+id/rel_ad_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_ad_preferences"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_security"
                        android:padding="12dp"
                        android:src="@drawable/ad_icon" />

                    <TextView
                        android:id="@+id/txtView_ad_preferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/img_ad_preferences"
                        android:text="Ads preferences"
                        android:textColor="#F4656D"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_ad_preferences"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/forwardarrow4" />


                </RelativeLayout>

                <!--Data sharing with business partners-->
                <RelativeLayout
                    android:id="@+id/rel_dataSharing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/img_dataSharing"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_night_mode"
                        android:padding="12dp"
                        android:src="@drawable/data_sharing_icon" />

                    <TextView
                        android:id="@+id/txtView_dataSharing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/img_dataSharing"
                        android:text="Data sharing with business partners"
                        android:textColor="#AD00FF"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_dataSharing"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/forwardarrow5" />


                </RelativeLayout>

                <!--Location Information-->
                <RelativeLayout
                    android:id="@+id/rel_locationInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/img_locationInfo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_notifications"
                        android:padding="12dp"
                        android:src="@drawable/location_info_icon" />

                    <TextView
                        android:id="@+id/txtView_locationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/img_locationInfo"
                        android:text="Location Information"
                        android:textColor="@color/teal_200"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_locationInfo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/forwardarrow" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginTop="100dp"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/txtView_privacyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Learn more about privacy on HearAll"
                android:textColor="#AD00FF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_white10_20"
                android:elevation="25dp"
                android:orientation="vertical"
                android:padding="15dp">

                <!--Privacy center-->
                <RelativeLayout
                    android:id="@+id/rel_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txtView_privacyCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="Privacy center"
                        android:textColor="#AD00FF"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_privacyCenter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/forwardarrow3" />


                </RelativeLayout>

                <!--Privacy Policy-->
                <RelativeLayout
                    android:id="@+id/rel_privacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtView_privacyPolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="Privacy policy"
                        android:textColor="#F4656D"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_privacyPolicy"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/forwardarrow2" />


                </RelativeLayout>

                <!--Contact us-->
                <RelativeLayout
                    android:id="@+id/rel_contactus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtView_contactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="Contact us"
                        android:textColor="#FF00B8"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_contactUs"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/forwardarrow" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>